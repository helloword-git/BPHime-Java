<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/setting_user_login_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="发送弹幕登录信息"
        />
    <EditText
        android:id="@+id/setting_user_login_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_login_info_label"/>
    <Button
        android:id="@+id/setting_user_login_info_save_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="保存用户信息"
        app:layout_constraintTop_toBottomOf="@id/setting_user_login_info_text"/>

</android.support.constraint.ConstraintLayout>