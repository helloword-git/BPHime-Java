<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/common_toolbar" />
    <TextView
        android:id="@+id/setting_user_login_info_label"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="发送弹幕登录信息"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/setting_user_web_login_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_login_info_label"
        android:text="通过网页登录用户，登录的地址都是B站的网页，登录后请妥善保管好机器，避免泄露登录信息"
        />
    <Button
        android:id="@+id/setting_user_web_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_web_login_label"
        android:text="用户登录"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/setting_user_web_login_clear_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_web_login_button"
        android:text="清除用户登录信息，不能发送弹幕或者登录信息失效可以点击这里重置，清除后将不能发送弹幕"
        />
    <Button
        android:id="@+id/setting_user_web_login_clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_web_login_clear_label"
        android:text="清除登录信息"/>
</android.support.constraint.ConstraintLayout>