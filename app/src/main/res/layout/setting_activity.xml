<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <include layout="@layout/common_toolbar" />
    <TextView
        android:id="@+id/setting_user_login_info_label"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:text="发送弹幕登录信息"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/setting_user_web_login_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_login_info_label"
        android:text="通过网页登录用户，登录的地址为B站的网页，登录后请妥善保管好机器，避免泄露登录信息，原则上在官方下载、手机不被盗、没有root、授权开发者权限就基本没有被盗号的风险。"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/setting_user_web_login_label_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#aa0000"
        app:layout_constraintTop_toBottomOf="@id/setting_user_web_login_label"
        android:text="请务必确保APP是从Github或者是酷安上下载而非其他地方下载或者他人转手，登录既视为同意并承担一切潜在盗号的风险。"
        />
    <Button
        android:id="@+id/setting_user_web_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_web_login_label_2"
        android:text="用户登录"/>

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/setting_user_web_login_clear_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_web_login_button"
        android:text="清除用户登录信息，不能发送弹幕或者登录信息失效可以点击这里重置，清除后将不能发送弹幕"
        />
    <Button
        android:id="@+id/setting_user_web_login_clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/setting_user_web_login_clear_label"
        android:text="清除登录信息"/>

    <TextView
        android:text="弹幕显示设置"
        android:id="@+id/setting_showing_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_user_web_login_clear_button"
        />

    <CheckBox
        android:id="@+id/setting_show_send_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示发送时间"
        app:layout_constraintTop_toBottomOf="@+id/setting_showing_text"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <CheckBox
        android:id="@+id/setting_show_member_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示观众入场"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/setting_show_send_time"
        app:layout_constraintTop_toTopOf="@+id/setting_show_send_time"
        />
</android.support.constraint.ConstraintLayout>